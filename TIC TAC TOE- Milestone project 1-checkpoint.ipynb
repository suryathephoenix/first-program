   "source": [
    "#taking the player input\n",
    "def player_input():\n",
    "    a= input(\"Player 1: please enter your name\" )\n",
    "    b= input(\"Player 2: please enter your name\")\n",
    "    \n",
    "    marker = ''\n",
    "    while not (marker== \"X\" or marker== \"O\"):\n",
    "        marker= input(\"Player 1: Will it be X or O ?\").upper()\n",
    "        if marker == a:\n",
    "            return (\"X\", \"O\")\n",
    "        else:\n",
    "            return (\"O\", \"X\")\n",
    "    "
   ]
  },
  {
   "cell_type": "code",
